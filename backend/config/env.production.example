# MongoDB Configuration (Use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hotel-management?retryWrites=true&w=majority

# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key

# Frontend URL for CORS and QR Code Generation
FRONTEND_URL=https://hotelflow-frontend-three.vercel.app

# Mistral AI Configuration (Free LLM)
MISTRAL_API_KEY=your-mistral-api-key-here

# Server Configuration
PORT=10000
NODE_ENV=production

# JWT Secret (Use a strong, random secret in production)
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration (for OTP)
# For production (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@guestflow.com

# Alternative: Use environment variables for email
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
